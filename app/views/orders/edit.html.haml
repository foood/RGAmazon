
.center
  .row
    = simple_form_for current_order  do |f|
      .col-md-6
        %h2 Billing address
        = f.simple_fields_for :billing_address  do |address|
          = render 'addresses/address_form', address: address
      .col-md-6
        %h2 Shipping address
        = f.simple_fields_for :shipping_address  do |address|
          = render 'addresses/address_form', address: address
        .form-actions
      .col-md-6
        = f.button :submit, 'Update profile'
