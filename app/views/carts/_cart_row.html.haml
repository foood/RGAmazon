.well
  .row
    .col-xs-8
      %h4= book.title
    .col-xs-4
      = form_for order_item, remote: true do |f|
        %h4.text-right
          Unit Price:
          %span{:style => "color: green"}= number_to_currency order_item.price
        .row
          .col-xs-4.group
            .input-group
              = f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1,max: book.stock
          .col-xs-8.text-right
            .btn-group
              = f.submit "Update Quantity", class: "btn btn-primary"
              = f.hidden_field :book_id, value: book.id

              = link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the book '#{order_item.book.title}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" }
        %h4.text-right
          Total Price:
          %span{:style => "color: green"}= number_to_currency order_item.total_price
