.form-inputs
  %hr
  = address.input :first_name, placeholder: "First name"
  = address.input :last_name, placeholder: "Last name"
  = address.input :address, placeholder: "Street Address"
  = address.input :city, placeholder: "City"
  = address.select :country_id, Country.all.map { |r| [r.name, r.id] }, include_blank: true
  = address.input :zip_code, placeholder: "Zip"
  = address.input :phone, placeholder: "Phone"
  %hr